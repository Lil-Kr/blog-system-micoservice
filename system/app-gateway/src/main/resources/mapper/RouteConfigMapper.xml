<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cy.micoservice.app.gateway.dao.RouteConfigMapper">

	<sql id="Table_Name">
		sys_route_config
	</sql>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, app_name, `schema`, `method`, `path`, uri, dubbo_invoke_param_class, auth_type, `status`, deleted, create_id, update_id, create_time, update_time
	</sql>
	
	<select id="routeConfigAllValidaList" resultType="org.cy.micoservice.app.entity.gateway.model.entity.RouteConfig">
		select <include refid="Base_Column_List" />
		from <include refid="Table_Name" />
		<where>
			<if test="status != null">
				`status` = #{status}
			</if>
		</where>
	</select>
	
	<select id="findInConfigIds" resultType="org.cy.micoservice.app.entity.gateway.model.entity.RouteConfig">
		select <include refid="Base_Column_List" />
		from <include refid="Table_Name" />
		<where>
			id in (
			<foreach collection="configIds" index="index" item="configId" separator=",">
				#{configId}
			</foreach>
			)
		</where>
	</select>


</mapper>
