<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cy.micoservice.blog.infra.console.dao.rbac.SysRoleAdminMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="org.cy.micoservice.blog.entity.infra.console.model.entity.sys.SysRoleAdmin">
		<id column="id" property="id"/>
		<result column="surrogate_id" property="surrogateId"/>
		<result column="role_id" property="roleId"/>
		<result column="user_id" property="userId"/>
		<result column="operate_ip" property="operateIp"/>
		<result column="create_time" property="createTime"/>
		<result column="update_time" property="updateTime"/>
	</resultMap>

	<!--表名-->
	<sql id="Table_Name">
		sys_role_user
	</sql>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, surrogate_id, role_id, user_id, operate_ip, create_time, update_time
	</sql>

	<!--根据用户id查询用户所分配的角色id列表-->
	<select id="selectRoleIdListByAdminId" resultType="java.lang.Long">
		select role_id
		from sys_role_user
		where user_id = #{adminId}
	</select>

	<!--根据角色id查询被分配的用户id-->
	<select id="selectAdminIdListByRoleId" resultType="java.lang.Long">
		select user_id
		from sys_role_user
		where role_id = #{roleId}
	</select>
</mapper>
